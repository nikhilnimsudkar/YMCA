function withinRegistrationDate(id, c){
	var proceed = false;
	
	$.ajax({
		  type: "GET",
		  async: false,
		  url:"checkProgramRegistrationDate?itemDetailId="+id.itemDetailsId+"&contactId="+c.contactId,
		  dataType: "json",
		  success: function( data ) {
			  //console.log(data);
			  if(data)
				  proceed = true;
		  },
		  error: function( xhr,status,error ){
			  proceed = false;
		  }
	});
	
	return proceed;
}