    @Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + (accountExpired ? 1231 : 1237);
		result = prime * result + (accountLocked ? 1231 : 1237);
		result = prime * result + ((address == null) ? 0 : address.hashCode());
		result = prime * result
				+ ((areaOfInterest == null) ? 0 : areaOfInterest.hashCode());
		result = prime * result
				+ ((confirmPassword == null) ? 0 : confirmPassword.hashCode());
		result = prime
				* result
				+ ((contactPointPurpose == null) ? 0 : contactPointPurpose
						.hashCode());
		result = prime
				* result
				+ ((contactWaiversAndTC == null) ? 0 : contactWaiversAndTC
						.hashCode());
		result = prime * result + (credentialsExpired ? 1231 : 1237);
		result = prime * result
				+ ((dateOfBirth == null) ? 0 : dateOfBirth.hashCode());
		result = prime * result
				+ ((donation == null) ? 0 : donation.hashCode());
		result = prime * result + (enabled ? 1231 : 1237);
		result = prime
				* result
				+ ((facilityAccessNo == null) ? 0 : facilityAccessNo.hashCode());
		result = prime * result
				+ ((fcrmContactId == null) ? 0 : fcrmContactId.hashCode());
		result = prime
				* result
				+ ((formattedPhoneNumber == null) ? 0 : formattedPhoneNumber
						.hashCode());
		result = prime * result + ((gender == null) ? 0 : gender.hashCode());
		result = prime * result
				+ ((interactions == null) ? 0 : interactions.hashCode());
		result = prime * result + (isActive ? 1231 : 1237);
		result = prime * result + ((isAdult == null) ? 0 : isAdult.hashCode());
		result = prime * result + (isMember ? 1231 : 1237);
		result = prime * result + (isPrimary ? 1231 : 1237);
		result = prime * result
				+ ((location == null) ? 0 : location.hashCode());
		result = prime * result + ((partyId == null) ? 0 : partyId.hashCode());
		result = prime * result
				+ ((password == null) ? 0 : password.hashCode());
		result = prime * result
				+ ((passwordHint == null) ? 0 : passwordHint.hashCode());
		result = prime * result
				+ ((personFirstName == null) ? 0 : personFirstName.hashCode());
		result = prime * result
				+ ((personLastName == null) ? 0 : personLastName.hashCode());
		result = prime
				* result
				+ ((primaryEmailAddress == null) ? 0 : primaryEmailAddress
						.hashCode());
		result = prime
				* result
				+ ((primaryFormattedPhoneNumber == null) ? 0
						: primaryFormattedPhoneNumber.hashCode());
		result = prime * result
				+ ((primaryURL == null) ? 0 : primaryURL.hashCode());
		result = prime * result
				+ ((profileImage == null) ? 0 : profileImage.hashCode());
		result = prime * result
				+ ((relationships == null) ? 0 : relationships.hashCode());
		result = prime * result + ((roles == null) ? 0 : roles.hashCode());
		result = prime * result
				+ ((username == null) ? 0 : username.hashCode());
		result = prime * result
				+ ((usrSequence == null) ? 0 : usrSequence.hashCode());
		result = prime * result + ((version == null) ? 0 : version.hashCode());
		return result;
	}

